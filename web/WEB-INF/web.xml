        <servlet-name>InsertAdviseeServlet</servlet-name>
        <url-pattern>/insertAdvisee</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DisplayCourseInfoServlet</servlet-name>
        <url-pattern>/displayCourseInfo</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
